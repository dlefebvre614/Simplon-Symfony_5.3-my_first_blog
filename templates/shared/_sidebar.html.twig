<!-- sidebar -->
<div
	class="col-md-12 col-lg-3 col-xl-2">
	<p class="post-meta">
	{# {{ dump(oldposts) }} #}
	{% for post in oldposts %}
		<a href="{{ path('post_view', {slug: post.slug}) }}">
			<div class="post-title">
				{{ post.title }}
			</div>
			<div>
				{{ post.createdAt | ago }}
			</div>
		</a>
		<img src="{{ post.image }}" alt="" style="width: 100%">

	{% endfor %}
	</p>

</div>
