{% extends 'clean.html.twig' %}

{% block title %}Page d'accueil
{% endblock %}

{% block sub %}Bienvenue sur notre Blog !
	<br>Voici la liste des articles les plus récents.
{% endblock %}

{% block bg %}
	{{ asset('clean/assets/img/home-bg.jpg') }}
{% endblock %}

{% block body %}
	{# {{ dump(posts) }} #}

	<!-- Main Content-->
		<div class="container px-4 px-lg-5"> {% for post in posts %}
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div
					class="col-md-10 col-lg-8 col-xl-7">
					<!-- Post preview -->
					<div class="post-preview">
						<a href="{{ path('post_view', {slug: post.slug}) }}">
							<h2 class="post-title">{{ post.title }}</h2>
							<img src="{{ post.image }}" alt="" style="width: 100%">
							<p class="post-subtitle">{{ post.content | u.truncate(1500, '...') | raw }}</p>
						</a>
						<p class="post-meta">Posted by
							<a href="#">{{ post.user.email }}</a>
							on
							{{ post.createdAt | ago }}
							Classé dans
							{{ post.category.name }}
						</p>
					</div>
				</div>

			</div>
			<hr>
		{% endfor %}
	</div>

{% endblock %}
